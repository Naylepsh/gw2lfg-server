{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDirs": [
      "./src",
      "./test"
    ],
    "baseUrl": "./",
    "paths": {
      "@root/*": ["src/*"],
      "@services/*": ["src/services/*"],
      "@test/*": ["test/*"],
    },
    "target": "ES2019",
    "module": "commonjs",
    "lib": [
      "ES2019"
    ],
    "types": [
      "reflect-metadata",
      "jest",
      "node"
    ],
    "alwaysStrict": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}